# ========== E2B SANDBOX CONFIGURATION ==========

# E2B API Key (for secure script execution)
# Get it from: https://e2b.dev
E2B_API_KEY=your_e2b_api_key_here

# ========== ANTHROPIC API CONFIGURATION ==========

# Anthropic API Key (for Claude integration)
# Get it from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxx

# Optional: Choose Claude model
CLAUDE_MODEL=claude-sonnet-4-5-20250929  # Default (recommended)
# Other options:
#   claude-sonnet-4-20250514 (balanced)
#   claude-haiku-4-5-20251001 (fastest, cheapest)

# Optional: Enable prompt caching (default: true, saves 90% on repeated queries)
ENABLE_PROMPT_CACHING=true

# ========== POSTHOG CONFIGURATION ==========

# PostHog Personal API Key
POSTHOG_API_KEY=your_posthog_api_key_here

# PostHog Project ID
POSTHOG_PROJECT_ID=your_project_id_here

# PostHog Region: "us", "eu", or "self_hosted"
POSTHOG_REGION=us

# PostHog Host URL (automatically set based on region, or provide custom URL)
POSTHOG_HOST=https://us.posthog.com

# ========== SALESFORCE CONFIGURATION ==========

# Salesforce API URL (for mock API in E2B sandbox)
SF_API_URL=http://localhost:8000

# Salesforce API Key (for mock API authentication)
SF_API_KEY=test_key_12345

# ========== DEVELOPMENT OPTIONS ==========

# Debug Mode: enables verbose logging
DEBUG=false

# Python Log Level
LOG_LEVEL=INFO
